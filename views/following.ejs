<!DOCTYPE html>
<html>
<%- include('./header'); %>
<body>
<div class="row">
  <div class="col-md-4">
    <h1 class="center"><%= userName %></h1>
    <a class="nav-link" href="/users/<%=userId%>/following"><%= totalFollowing %> following</a>
    <a class="nav-link" href="/users/<%=userId%>/followers"><%= totalFollowers %> followers</a>
  </div>
  <div class="col-md-8">
    <ul>
      <h2>Following</h2>
      <% for(let follow of following){ %>
        <li><a class="nav-link" href="/users/<%= follow.followed_id %>"><%= follow.name %></a></li>
      <% } %>
    </ul>
  </div>
</div>


</body>

<footer>
  <%- include('./footer'); %>
  <link href="/stylesheets/style.css" rel="stylesheet">
</footer>
</html>