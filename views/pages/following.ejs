<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head'); %>
</head>
<body>
<%- include('../partials/header'); %>
<div class="container">
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%- include('../partials/user_info'); %>
            </section>
            <section class="stats">
                <%- include('../partials/stats'); %>
            </section>
        </aside>
        <main class="col-md-8">
            <h3>Following</h3>

            <ul class="users follow">
                <% for(let follow of following){ %>
                    <li><a class="nav-link" href="/users/<%= follow.followed_id %>"><%= follow.name %></a></li>
                <% } %>
            </ul>
        </main>
    </div>
</div>
<%- include('../partials/footer'); %>
</body>
</html>