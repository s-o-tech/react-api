<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head'); %>
</head>
<body>
<%- include('../partials/header'); %>
<div class="container">
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%- include('../partials/user_info'); %>
            </section>
            <section class="stats">
                <%- include('../partials/stats'); %>
            </section>
        </aside>
        <main class="col-md-8">
            <ul>
                <h2>Followers</h2>
                <% for(let follower of followers){ %>
                    <li><a class="nav-link" href="/users/<%= follower.follower_id %>"><%= follower.name %></a></li>
                <% } %>
            </ul>
        </main>
    </div>
</div>
<%- include('../partials/footer'); %>
</body>
</html>