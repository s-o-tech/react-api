<!DOCTYPE html>
<html>
<head>
    <%- include('../../partials/head'); %>
</head>
<body>
<%- include('../../partials/header'); %>
<div class="container">
    <h1>Sign in Page</h1>

    <%- include('../../partials/error_messages'); %>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/accounts/signin" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Password(<a href="/accounts/password_reset">password forgot?</a>)</label>
                    <input type="password" name="password" class="form-control" />
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" name="remember_me" class="form-check-input" id="rememberMeCheck" />
                    <label class="form-check-label" for="rememberMeCheck">Remember me on this computer</label>
                </div>

                <button class="btn btn-primary btn-block" type="submit">Sign in</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer'); %>
</body>
</html>